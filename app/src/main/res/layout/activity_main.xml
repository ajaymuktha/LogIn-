<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Signin"
        android:textColor="@color/blue"
        android:layout_width="276dp"
        android:layout_height="53dp"
       android:layout_marginLeft="150dp"
        android:paddingBottom="10dp"
        android:text="@string/Sign_In"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
       android:layout_marginLeft="0dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="55dp"
        android:src="@drawable/logo1" />
     <TextView
         android:id="@+id/Email"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="14sp"
         android:text="Email Address"
         android:textStyle="bold"
         android:layout_below="@id/logo1"
         android:layout_marginLeft="40dp"
         android:layout_marginTop="30dp" />
     
      <EditText
          android:background="@drawable/edittextsstyle"
          android:id="@+id/abc_123"
          android:layout_width="360dp"
          android:layout_height="wrap_content"
          android:hint="abc_123          @fountane.com"
          android:inputType="textMultiLine"
          android:layout_below="@id/Email"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="10dp"
          android:textStyle="bold"/>
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/abc_123"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:background="@drawable/edittextsstyle"
        android:id="@+id/type"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="........"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/password"

        android:layout_marginLeft="10dp"/>
    <CheckBox
        android:id="@+id/Remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:layout_below="@id/type"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="26dp"
        android:layout_below="@id/type"/>
    <Button
        android:id="@+id/sign_in"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:layout_below="@id/Remember_me"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:background="#00bfff" />
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textSize="15sp"
        android:layout_below="@id/sign_in"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"/>
    <Button
        android:drawableLeft="@drawable/ic_google"
        android:id="@+id/google"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:layout_below="@id/or"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to Fountane HR? Register"
        android:textSize="15dp"
        android:textColor="#4689C8"
        android:textStyle="bold"
        android:layout_below="@id/google"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"/>
















</RelativeLayout>